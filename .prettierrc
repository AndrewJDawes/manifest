{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"semi": true,
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{ "files": ".prettierrc", "options": { "parser": "json" } }
	],
	"tailwindAttributes": ["ulClass", "divClass", "spanClass", "defaultClass"]
}
